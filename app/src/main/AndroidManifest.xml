<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ash.simplelist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddItemPage" />
        <activity android:name=".WaysToViewItems" />
        <activity
            android:name=".ItemViewByListName"
            android:label="@string/title_activity_item_view_by_list_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ItemViewByDate"
            android:label="@string/title_activity_item_view_by_date"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ItemViewByLocation" />
        <activity android:name=".ItemViewByPrice" />
        <activity android:name=".myListView"></activity>
    </application>

</manifest>